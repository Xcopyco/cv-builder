// Close the loading lightbox
closeLightBoxLoading();

<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    displayGrowlMessages("error","Error!", "<%= message %>", "topRight");
  <% end %>
<% else %>
    displayGrowlMessages("success","Success!", "Project Details has been saved", "top");
<% end %>

$('#DIV_PROJECT_DETAILS').html("<%= escape_javascript(render(:partial=>"/users/dashboard/projects")) %>");