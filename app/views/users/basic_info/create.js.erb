// Close the loading lightbox
closeLightBoxLoading();

<% if @basic_info.errors.any? %>
  <% @basic_info.errors.full_messages.each do |message| %>
    displayGrowlMessages("error","Error!", "<%= message %>", "topRight");
  <% end %>
<% else %>
    displayGrowlMessages("success","Success!", "Basic Information has been saved", "top");
<% end %>

$('#DIV_BASIC_INFO_DETAILS').html("<%= escape_javascript(render(:partial=>"/users/dashboard/basic_info")) %>");