<% end %>


<%= link_to "Download PDF", download_cv_path(:theme => 'classic',:id=> @user.id)  , :class=>"btn btn-success" , :style=>"float:right;margin-right:10px;" %>

<div class="cl-10"></div>
<div class="span12"  style="padding-left:10px;margin-top:20px;margin-left: 10px;border: 0px solid #898989; border-radius: 3pt;
