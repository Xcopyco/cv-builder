    <div class="cl-15"></div>
  </div>

  <!-- Name -->

  <div class="cl-15"></div>

  <!-- Basic Info Block -->

  <%= render :partial=>"/download/sections/classic/basic_info" ,:locals =>{:linkedin_details => @linkedin_details} %>

