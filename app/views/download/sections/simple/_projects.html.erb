<div class="span10" style="font-size:20px;width:920px;margin-left: 10px;margin-right:10px;">
  <% if projects && projects.any? %>
    <h3>Projects</h3>
    <div class="row-fluid">

      <% projects.each do |project| %>

        <div class="" style="float:left;width: 650px;">
          <% if project.project_name %>
            <div style="font-size: 21px;font-weight: bold;"><%= project.project_name %></div>
            <div class="cl-10"></div>
          <% end %>
          <% if project.public_url %>
            <div style="font-size: 18px;font-style: italic;"><%= link_to "#{project.public_url}" , project.public_url ,:style=>"color:blue;" %></div>
            <div class="cl-10"></div>
          <% end %>

          <% if project.project_description %>
            <div class="cl-5"></div>
            <div style="font-size: 18px;font-style: italic;"><%= project.project_description %></div>
          <% end %>
        </div>
        <div class="" style="float:right;width: 250px;">
          <div style="float:right;">
            <% if project.created_at && project.updated_at %>
              <div><%= project.created_at.strftime('%b %Y')  %> to <%= project.updated_at.strftime('%b %Y')  %></div>
            <% end %>
          </div>
        </div>
        <div class="cl-30"></div>
      <% end %>
    </div>
  <% end %>
  <div class="cl"></div>
</div>