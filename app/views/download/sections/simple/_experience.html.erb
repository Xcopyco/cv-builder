<div class="span10" style="font-size:20px;width:920px;margin-left: 10px;margin-right:10px;">
<% if experience_details && experience_details.any? %>
  <h3>Experience</h3>
  <div class="row-fluid">
    <% experience_details.each do |exp| %>
        <div class="" style="float:left;width: 650px;">
          <% if exp.title %>
            <div style="font-size: 21px;font-weight: bold;"><%= exp.title %></div>
            <div class="cl-10"></div>
          <% end %>
          <% if exp.company_name %>
            <div class="cl"></div>
            <div style="font-style: italic;float: left;"><%= exp.company_name %></div>
            <div class="cl-5"></div>
          <% end %>
          <% if exp.industry_name %>
            <div class="cl-5"></div>
            <div style="font-size: 18px;font-style: italic;"><%= exp.industry_name %> Industry</div>
          <% end %>
        </div>
        <div class="" style="float:right;width: 250px;">
          <div style="float:right;">
            <% if exp.is_current %>
              <div><%= Date.strptime("#{exp.start_date.to_s}", "%d , %m,  %Y").strftime('%b %Y') %> to <%= exp.end_date %></div>
            <% else %>
              <div><%= Date.strptime("#{exp.start_date.to_s}", "%d , %m,  %Y").strftime('%b %Y') %> to <%= Date.strptime("#{exp.end_date.to_s}", "%d , %m, %Y").strftime('%b %Y') %></div>
            <% end %>
          </div>
        </div>
        <div class="cl-20"></div>
    <% end %>
        </div>
  <% end %>
  <div class="cl"></div>
</div>